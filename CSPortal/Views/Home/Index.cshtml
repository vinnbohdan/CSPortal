
@{
    ViewBag.Title = "Index";
}

<div class="form">

    <ul class="tab-group">
        <li class="tab active"><a rel="nofollow" rel="noreferrer" href="#login">Log In</a></li>
        <li class="tab"><a rel="nofollow" rel="noreferrer" href="#signup">Sign Up</a></li>
    </ul>

    <div class="tab-content">

        <div id="login">
            <h1>Welcome Back!</h1>

            <form action="/" method="post" data-bind="submit: login">

                <div class="field-wrap">
                    <label>
                        User Name<span class="req">*</span>
                    </label>
                    <input type="text" required autocomplete="off" data-bind="value: loginUser" />
                </div>

                <div class="field-wrap">
                    <label>
                        Password<span class="req">*</span>
                    </label>
                    <input type="password" required autocomplete="off" data-bind="value: loginPassword" />
                </div>

                <button class="button button-block" />Log In</button>

            </form>

        </div>

        <div id="signup">
            <h1>Sign Up for Free</h1>

            <form action="/" method="post" data-bind="submit: register">

                <div class="field-wrap">
                    <label>
                        User Name<span class="req">*</span>
                    </label>
                    <input type="text" required autocomplete="off" data-bind="value: user" />
                </div>

                <div class="field-wrap">
                    <label>
                        Set A Password<span class="req">*</span>
                    </label>
                    <input type="password" required autocomplete="off" data-bind="value: registerPassword" />
                </div>

                <div class="field-wrap">
                    <label>
                        Confirm A Password<span class="req">*</span>
                    </label>
                    <input type="password" required autocomplete="off" data-bind="value: registerPassword2" />
                </div>

                <button type="submit" class="button button-block" />Get Started</button>

            </form>

        </div>

    </div><!-- tab-content -->
</div> <!-- /form -->
@section LogWinScript
{
    <script src="@Url.Content("~/Scripts/CustomScr/LoginWindow.js")"></script>
    <script src="@Url.Content("~/Scripts/CustomScr/Auth.js")"></script>
}
